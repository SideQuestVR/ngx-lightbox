{
  "description": "A port >= angular 9 for lightbox2",
  "dependencies": {
    "@angular-devkit/build-ng-packagr": "^0.1002.4",
    "tslib": "^2.0.0"
  },
  "private": true,
  "workspaces": [
    "dist/*"
  ],
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.1002.4",
    "@angular/cli": "^10.2.4",
    "@angular/common": "^10.2.5",
    "@angular/compiler": "^10.2.5",
    "@angular/compiler-cli": "^10.2.5",
    "@angular/core": "^10.2.5",
    "@angular/platform-browser": "^10.2.5",
    "@angular/platform-browser-dynamic": "^10.2.5",
    "@types/jasmine": "^3.3.13",
    "awesome-typescript-loader": "^5.2.1",
    "copyfiles": "^2.1.0",
    "core-js": "^2.6.9",
    "del-cli": "^2.0.0",
    "delay-cli": "^1.1.0",
    "husky": "^7.0.0",
    "jasmine-core": "~3.5.0",
    "karma": "~5.0.0",
    "karma-jasmine": "~4.0.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.5",
    "ng-packagr": "^10.1.0",
    "npm-run-all": "^4.1.5",
    "phantomjs-prebuilt": "^2.1.16",
    "rxjs": "^6.6.7",
    "scss-bundle": "^3.1.2",
    "tslint": "~6.1.0",
    "typescript": "~4.0.8",
    "wait-on": "^6.0.0",
    "watch": "^1.0.2",
    "webpack": "^4.33.0",
    "zone.js": "~0.10.2"
  },
  "scripts": {
    "start": "yarn watch:all",
    "watch:all": "run-p -r watch:lib watch:demo ",
    "watch:lib": "ng build ngx-lightbox --watch",
    "watch:scss": "watch \"yarn bundle-styles\" \"projects/\"",
    "bundle-styles": "delay 5 && scss-bundle -c scss-bundle.config.json",
    "watch:demo": "wait-on dist/ngx-lightbox/fesm5 && delay 10 && ng serve ngx-lightbox-demo --poll 2000 --host 0.0.0.0",
    "build": "ng build ngx-lightbox"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viscoci/ngx-lightbox.git",
    "directory": "dist/ngx-lightbox"
  },
  "keywords": [
    "lightbox2",
    "angularjs",
    "directives",
    "lightbox2",
    "angular",
    "directives"
  ],
  "author": "themyth92 & piotrmocek & viscoci",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/themyth92/ngx-lightbox/issues"
